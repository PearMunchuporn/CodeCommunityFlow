@model CodeCommunityFlow.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12">
            <div class="mx-auto login-box" style="width:600px">
                <div class="form-group mr-3">
                    <h3>Login</h3>
                    <br />
                    <form method="post" asp-action="Login" id="loginForm" asp-controller="Account" novalidate class="needs-validation">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="EmailLogin" class="mr-1">Email</label>
                            <input type="email" class="form-control" id="EmailLogin" name="Email" required autofocus value="@Model.Email" />
                            <div class="invalid-feedback">Valid email is required.</div>
                        </div>

                        <div class="form-group">
                            <label for="PasswordLogin" class="mr-1">Password</label>
                            <input type="password" class="form-control" id="PasswordLogin" name="Password" required />
                            <div class="invalid-feedback">Password is required.</div>
                        </div>
                        @if (ViewData.ModelState.ContainsKey("My Error"))
                        {
                            var errorMessage = ViewData.ModelState["My Error"].Errors.FirstOrDefault()?.ErrorMessage;
                            if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="text-danger">@Html.Raw(errorMessage.Replace("\n", "<br />"))</div>
                            }
                        }
                     <br />

                        <button type="submit" class="btn btn-success">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .valid-feedback,
    .invalid-feedback {
        display: none;
    }

    input.is-valid ~ .valid-feedback,
    input.is-invalid ~ .invalid-feedback {
        display: block;
    }
</style>

<script>

    $("a[href='/Login']").attr("id", "active");
</script>




