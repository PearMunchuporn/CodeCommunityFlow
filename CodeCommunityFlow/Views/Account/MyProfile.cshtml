@model CodeCommunityFlow.ViewModels.UserViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["SuccessChangeProfile"] != null)
{
    <div class="alert alert-success" id="successAlert">@TempData["SuccessChangeProfile"]</div>
}

<h4 class="my-4">My Profile</h4>

<div class="container">
    <div class="main-body">


        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @{
                                string imageUrl;
                                if (string.IsNullOrEmpty(Model.ImageUser))
                                {
                                    imageUrl = Url.Content("~/Images/UsersImage/user.png");
                                }
                                else
                                {
                                    imageUrl = Url.Content("~/Uploads/ImageUsers/" + Model.ImageUser);
                                }
                            }

                            <div class="my-2 d-flex justify-content-center">
                                <img src="@imageUrl" class="img-fluid rounded" width="150" />
                            </div>
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Score</h6>
                            </div>
                            @if (ViewBag.IsTopUser != null && (bool)ViewBag.IsTopUser)
                            {
                                <div class="col-sm-9 text-secondary">
                                    @Model.Score &nbsp;
                                    🎉<span class="badge badge-success">
                                        You are the top contributor!
                                    </span><span>🎉</span>

                                </div>

                            }
                            else
                            {
                                <div class="col-sm-9 text-secondary">
                                    @Model.Score
                                </div>
                            }

                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warning Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.WarningCount
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warning Message</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @(Model.WarningMessage == null ? "You haven't received any warning messages." : @Model.WarningMessage)

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="d-flex justify-content-center gap-3">
                                    <a class="btn btn-info " href="/MyAccount/ChangeMyProfile">Edit or Update Your Profile</a>&nbsp;&nbsp;&nbsp;&nbsp;

                                    <button type="button"
                                            class="btn btn-danger"
                                            data-toggle="modal"
                                            data-target="#deleteUserModal"
                                            data-userid="@Model.UserID">
                                        Delete User
                                    </button>
                                </div>


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a id="ConfirmDeleteUserModal" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
<script>
    $("a[href='/Myaccount/MyProfile']").attr("id", "active");

    $('#deleteUserModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var UId = button.data('userid');
        var deleteUrl = '/Account/DeleteMyAccount/' + UId;

        var modal = $(this);
        modal.find('#ConfirmDeleteUserModal').attr('href', deleteUrl);
    });
    setTimeout(function () {
        var alert = document.getElementById("successAlert");
        if (alert) {
            alert.classList.remove("show");
            alert.classList.add("fade");
            alert.style.opacity = 0;
            setTimeout(() => alert.remove(), 500);
        }
    }, 3000);
</script>