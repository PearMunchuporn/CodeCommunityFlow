@model CodeCommunityFlow.ViewModels.CountryViewModel
@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact</h2>

<div class="container-fluid">
    <div class="container-sm">
        <br />
        @using (Html.BeginForm("InsertContactUs", "ContactUs", FormMethod.Post, new { enctype = "multipart/form-data", id = "Contact-Form" }))
        {
            @*<form action="/product/create" method="post" enctype="multipart/form-data">*@
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col">

                    <div class="form-group col-md-12">
                        @Html.LabelFor(c => c.FirstName)
                        @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control", placeholder = "First Name" })
                        @Html.ValidationMessageFor(c => c.FirstName)

                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(c => c.LastName)
                        @Html.TextBoxFor(c => c.LastName, new { @class = "form-control", placeholder = "Last Name" })
                        @Html.ValidationMessageFor(c => c.LastName)
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(c => c.Company)
                        @Html.TextBoxFor(c => c.Company, new { @class = "form-control", placeholder = "Please enter you company, If you contact us as an individual please enter N/A." })
                        @Html.ValidationMessageFor(c => c.Company)
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(c => c.WorkEmail)
                        @Html.TextBoxFor(c => c.WorkEmail, new { @class = "form-control", placeholder = "Please enter you work or personal email.", id = "txtWorkEmail" })
                        @*@Html.ValidationMessageFor(c => c.WorkEmail)*@
                        <div class="invalid-feedback" id="email-feedback">Valid email is required.</div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(c => c.Country, "Country")
                        @Html.DropDownListFor(
                            c => c.Country,
                            (IEnumerable<SelectListItem>)ViewBag.CountryList,
                            "Select a country",
                            new { @class = "form-control country-select" })
                        @Html.ValidationMessageFor(c => c.Country)
                    </div>


                    <div class="form-group col-md-12">
                        <label for="HowHearUsID">How do you hear about us?</label>
                        @Html.DropDownListFor(c => c.HowHearUsID, new SelectList(ViewBag.HowKnowUs, "HowHearUsID",
                        "Know"), "How do you hear about us?", new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.HowHearUsID)
                    </div>
                </div>




            </div>

            <br />
            @*@Html.ValidationSummary()*@
            <button type="submit" class="btn btn-success">Emplower My Team</button>
            <a class="btn btn-danger" href="/home/index">Cancel</a>

            @*</form>*@


        }
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

}
