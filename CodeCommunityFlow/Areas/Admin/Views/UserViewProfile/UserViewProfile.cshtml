@model CodeCommunityFlow.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "User's Profile View";
    Layout = "~/Areas/Admin/Views/Shared/_AdminViewLayout.cshtml";
}



<h4 class="my-4">User's Profile View by Admin</h4>

<div class="container">
    <div class="main-body">


        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @{
                                string imageUrl;
                                if (string.IsNullOrEmpty(Model.ImageUser))
                                {
                                    imageUrl = Url.Content("~/Images/UsersImage/user.png");
                                }
                                else
                                {
                                    imageUrl = Url.Content("~/Uploads/ImageUsers/" + Model.ImageUser);
                                }
                            }
                            <div class="my-2 d-flex justify-content-center">
                                <img src="@imageUrl" class="img-fluid rounded" width="150" />
                            </div>

                            <div class="mt-3">
                                <h4>@Model.UserName</h4>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User ID</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserID
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Score</h6>

                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Score
                                @if (ViewBag.IsTopUser != null && (bool)ViewBag.IsTopUser)
                                {


                                    <span class="badge badge-success">

                                        This User is the top contributor!
                                    </span><span>🤩</span>




                                }

                            </div>

                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warning Count</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.WarningCount
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warning Message</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @(Model.WarningMessage == null ? "This user has't received any warning messages." : @Model.WarningMessage)

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="d-flex gap-3 justify-content-center">

                                    <a class="btn btn-warning" href="/Admin/UserManagement/WarnsUser/@Model.UserID">
                                        Send Message to Warn User
                                    </a>&nbsp;&nbsp;
                                    <a class="btn btn-info" href="/Admin/UserManagement/UpdateUserScore/@Model.UserID">Update User's Score</a>&nbsp;&nbsp;
                                    <button type="button"
                                            class="btn btn-danger"
                                            data-toggle="modal"
                                            data-target="#deleteUserModal"
                                            data-userid="@Model.UserID">
                                        Delete User
                                    </button>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<h4 class="my-4">User's Question</h4>


<div>
    <!-- Render Partial: Questions Asked -->
    @Html.Partial("UserQuestions", Model.Questions)
</div>

<h4 class="my-4">User's Answer</h4>

<div>
    <!-- Render Partial: Questions Asked -->
    @Html.Partial("UserAnswers", Model.Answers)
</div>

<h4 class="my-4">Deletion History</h4>

<div>
    @Html.Partial("UserDeletionHistory" , Model.DeleteLogs)
</div>

<h4 class="my-4">User's Score History</h4>
<div>
    @Html.Partial("ScoreHistoryByUser" , Model.ScoreHistoryUser)
</div>

<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a id="ConfirmDeleteUserModal" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#questionsTable').DataTable();
        $('#answersTable').DataTable();
    });
    $('#deleteUserModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var UId = button.data('userid');
        var deleteUrl = '/Admin/UserManagement/DeleteUserByAdmin/' + UId;

        var modal = $(this);
        modal.find('#ConfirmDeleteUserModal').attr('href', deleteUrl);
    });
</script>