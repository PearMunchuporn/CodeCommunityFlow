@model List<CodeCommunityFlow.ViewModels.AdminActionLogsViewModel>
@{
    ViewBag.Title = "Action Logs";
    Layout = "~/Areas/Admin/Views/Shared/_AdminViewLayout.cshtml";
}


<table class="table table-responsive-xl" id="ActionLogsTable">
    <thead>
        <tr>
            <th>No.</th>

            <th>Action</th>
            <th>Action By Admin</th>
            <th>User Name</th>
           
            <th>DateTime</th>
            

        </tr>
    </thead>
    @{ int no = 1;
    }
    @foreach (var log in Model)
    {
        <tr>

            <td>@no</td>

            <td>
                @if (log.ActionName !=null)
                {
                    <p style="font-size:20px">@Html.DisplayFor(type => log.ActionName)</p>
                }
                


            </td>

            <td><p style="font-size:20px"><span class="badge badge-primary">@Html.DisplayFor(report => log.Admin.AdminName)</span></p></td>
            
            <td>
                @if (log.UserName != null)
                {
                    <p>@Html.DisplayFor(report => log.UserName)</p>
                }
                else
                {
                    <p style="font-size:20px"><span class="badge badge-dark">N/A</span></p>
                }
            </td>
        

            <td>@Html.DisplayFor(time => log.ActionDateTime)</td>
            

        </tr>
        no++;
    }


</table>
